# tellian-tutor production environment variables
# Copy to .env and fill in real values, then encrypt with: make encrypt-env

# PostgreSQL
POSTGRES_DB=tellian_tutor
POSTGRES_USER=tellian
POSTGRES_PASSWORD=CHANGE_ME

# Django (svc-core)
SECRET_KEY=CHANGE_ME
DEBUG=false
ALLOWED_HOSTS=CHANGE_ME_DOMAIN
DATABASE_URL=postgres://tellian:CHANGE_ME@postgres:5432/tellian_tutor
REDIS_URL=redis://redis:6379/0

# AI Processor (svc-ai-processor)
OPENROUTER_API_KEY=CHANGE_ME
TEST_PROCESSING_API_KEY=CHANGE_ME

# GHCR (Docker image pull)
GHCR_TOKEN=CHANGE_ME
GHCR_USER=CHANGE_ME

# Service versions (used by docker-compose)
CORE_VERSION=latest
FRONTEND_VERSION=latest
AI_PROCESSOR_VERSION=latest

# Caddy domain
DOMAIN=localhost
