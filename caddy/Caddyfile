{$DOMAIN} {
    # API, admin, health, ready, static -> svc-core
    handle /api/* {
        request_body {
            max_size 10MB
        }
        reverse_proxy core:8000
    }

    handle /admin/* {
        request_body {
            max_size 10MB
        }
        reverse_proxy core:8000
    }

    handle /health/* {
        reverse_proxy core:8000
    }

    handle /ready/* {
        reverse_proxy core:8000
    }

    handle /static/* {
        reverse_proxy core:8000
    }

    # Everything else -> svc-frontend (SPA)
    handle {
        reverse_proxy frontend:80
    }
}
